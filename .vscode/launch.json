{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Run Mocha",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--file", "specs/specHelper.js",
        "-u", "bdd-lazy-var/global",
        "--recursive",
        "--exit",
        "--color",
        "${workspaceFolder}/specs/units/**/*.spec.js"
      ]
    }
  ]
}